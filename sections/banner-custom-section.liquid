<!-- Slider Start From Here -->
<div class="banner-slider">
  <div class="slick-slider">
    {%- for block in section.blocks -%}
      <div class="banner-main-box">
        <div class="banner-img-box">
          <img src="{{block.settings.banner_img |  img_url:'master' }}" class="banner-img">
        </div>
        <div class="banner-content">
          <h1 class="banner-heading">{{ block.settings.banner_heading }}</h1>
          <button class="banner-sell-button">
            <a href="{{block.settings.sell_discount}}" class="button-sell">{{ block.settings.button1_text }}</a>
          </button>
          <button class="banner-collection-button">
            <a href="{{block.settings.collection_url}}" class="button-collection">{{ block.settings.button2_text }}</a>
          </button>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "banner custom section",
  "blocks": [
    {
      "name": " banner slide",
      "type": "text",
      "settings": [
        {
          "type": "image_picker",
          "id": "banner_img",
          "label": "Banner img"
        },
        {
          "type": "richtext",
          "id": "banner_heading",
          "label": "Bnanner headding"
        },
        {
          "type": "text",
          "id": "button1_text",
          "label": "Button 1"
        },
        {
          "type": "text",
          "id": "button2_text",
          "label": "Button 2"
        },
        {
          "type": "url",
          "id": "collection_url",
          "label": "select collection"
        },
        {
          "type": "url",
          "id": "sell_discount",
          "label": "select  discount collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "banner custom section"
    }
  ]
}
{% endschema %}

<style>
  .title h4 {
    text-align: center;
  }
  .slick-slider .banner-main-box {
    display: inline-block;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    font-size: 20px;
    position: relative;
  }
  .banner-content {
    position: absolute;
    left: 10%;
    text-align: left;
    z-index: 999;
  }
  .banner-main-box .banner-img-box {
    /* height: 100vh; */
    object-fit: cover !important;
    width: 90%;
    position: relative;
    z-index: -1;
  }
  .banner-main-box .banner-img {
    position: relative;
    z-index: -1;
  }
  .banner-img-box::after {
    position: absolute;
    content: '';
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, rgba(0, 0, 0, 1) 0%, rgba(255, 255, 255, 0) 100%);
    top: 0;
    left: 0;
    z-index: 1;
  }

  .banner-content .banner-heading {
    font-size: 96px;
    color: #ffffff;
    font-weight: 400;
    line-height: 125.14px;
  }
  .banner-content .banner-sell-button {
    outline: none;
    border: 0;
    padding: 10px 30px;
    border-radius: 25px;
    background: linear-gradient(90deg, rgba(48, 48, 48, 1) 0%, rgba(119, 119, 119, 0.102) 69%);
    display: block;
    margin: 30px 0;
  }
  .banner-content .banner-sell-button .button-sell {
    font-size: 24px;
    color: #ffffff;
    font-weight: 500;
    /* line-height: 36px; */
  }
  .banner-content .banner-collection-button {
    padding: 10px 30px;
    background-color: #d0c272;
    border: 0;
    outline: none;
  }
  .banner-content .banner-collection-button .button-collection {
    font-size: 24px ;
    color: #000000;
    font-weight: 500;
    /* line-height: 36px; */
  }
  .banner-slider {
    position: relative;
    z-index: 1;
  }
  .banner-slider::after {
    position: absolute;
    width: 85%;
    height: 100%;
    background-color: #e1dad0;
    top: 0;
    left: 0;
    content: '';
    z-index: -1;
  }
  / Arrows / .slick-prev:hover,
  .slick-prev:focus,
  .slick-next:hover,
  .slick-next:focus {
    background: transparent;
    color: transparent;
  }
  .slick-prev:hover:before,
  .slick-prev:focus:before,
  .slick-next:hover:before,
  .slick-next:focus:before {
    opacity: 1;
  }
  .slick-prev.slick-disabled:before,
  .slick-next.slick-disabled:before {
    opacity: 0.25;
  }
  .slick-prev:before,
  .slick-next:before {
    font-family: 'slick-icons, sans-serif';
    font-size: 30px;
    line-height: 1;
    color: #000;
    font-weight: bold;
  }

  .slick-prev {
    left: 30px;
    position: absolute;
    width: 50px;
    height: 50px;
    border: 3px solid #282828;
    transform: rotate(-45deg);
    top: 50%;
  }
  .slick-next {
    right: 30px;
    position: absolute;
    width: 50px;
    height: 50px;
    border: 3px solid #282828;
    transform: rotate(-45deg);
    top: 50%;
  }
  [dir='rtl'] .slick-prev {
    left: auto;
    /* right: -25px; */
  }
  .slick-prev:before {
    content: '←';
    transform: rotate(45deg);
    display: inline-block;
  }
  [dir='rtl'] .slick-prev:before {
    content: '→';
  }

  [dir='rtl'] .slick-next {
    right: auto;
  }
  .slick-next:before {
    content: '→';
    transform: rotate(45deg);
    display: inline-block;
  }
  [dir='rtl'] .slick-next:before {
    content: '←';
  }

  .slick-slider .banner-main-box img {
    width: 100%;
    -o-object-fit: contain;
    object-fit: contain;
  }

