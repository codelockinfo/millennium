  .slick-prev:hover, .slick-prev:focus,
  .slick-next:hover,
  .slick-next:focus {
    background: transparent;
    color: transparent; 
}
    .slick-prev:hover:before, .slick-prev:focus:before,
    .slick-next:hover:before,
    .slick-next:focus:before {
      opacity: 1; 
    }
  .slick-prev.slick-disabled:before,
  .slick-next.slick-disabled:before {
    opacity: 0.25; 
}
  .slick-prev:before,
  .slick-next:before {
    font-family: "slick-icons, sans-serif";
    font-size: 30px;
    line-height: 1;
    color: #000;
    opacity: 0.75;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
 }

  .slick-prev {
    left: 20px;
    position: absolute;  
    width: 50px;
    height: 50px;
    border: 2px solid #282828;
    transform: rotate(45deg);
    top: 50%;
    
}
.slick-next {
  right: 20px;
  position: absolute;
   width: 50px;
   height: 50px;
   border: 2px solid #282828;
   transform: rotate(45deg);
   top: 50%;
}
  [dir='rtl'] .slick-prev {
    left: auto;
    /* right: -25px; */
  }
  .slick-prev:before {
    content: '←';
    transform: rotate(-45deg);
  }
  [dir='rtl'] .slick-prev:before {
    content: '→';
  }

  [dir='rtl'] .slick-next {
    right: auto;
  }
  .slick-next:before {
    content: '→';
    transform: rotate(-45deg);
  }
  [dir='rtl'] .slick-next:before {
    content: '←';
  }

  .slick-slider .banner-main-box img {
    width: 90%;
    -o-object-fit: contain;
    object-fit: contain;
  }
</style>
<script>
  $('.slick-slider').slick({
    slidesToShow: 1,
    slidesToScroll: 1,
    arrows: true,
    prevArrow: "<button type='button' class='slick-prev'></button>",
    nextArrow: "<button type='button' class='slick-next'></button>",
  });
</script>
