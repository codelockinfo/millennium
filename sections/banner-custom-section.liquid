<!-- Slider Start From Here -->
<div class="banner-slider">
  <div class="slick-slider">
    {%- for block in section.blocks -%}
    <div class="banner-main-box">
      <img src="{{block.settings.banner_img |  img_url:'master' }}">
      <div class="banner-content">
                  <h1 class="banner-heading">{{block.settings.banner_heading}}fvdfbddbfbbf</h1>
				  <button class="banner-sell-button"><a href="{{block.settings.sell_discount}}">{{block.settings.button1_text}}fdfsfgfgfg</a></button>
				  <button class="banner-collection-button"><a href="{{block.settings.collection_url}}"></a>{{block.settings.button2_text}}dsfsdfdsffs</button>
			</div>
    </div>
{% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "banner custom section",
  "blocks": [
    {
      "name": " banner slide",
      "type": "text",
      "settings": [
        {
          "type": "image_picker",
          "id": "banner_img",
          "label": "Banner img"
        },
        {
          "type": "richtext",
          "id": "banner_heading",
          "label": "Bnanner headding"
        },
        {
          "type": "text",
          "id": "button1_text",
          "label": "Button 1"
        },
        {
          "type": "text",
          "id": "button2_text",
          "label": "Button 2"
        },
        {
          "type": "url",
          "id": "collection_url",
          "label": "select collection"
        },
        {
          "type": "url",
          "id": "sell_discount",
          "label": "select  discount collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "banner custom section"
    }
  ]
}
{% endschema %}

