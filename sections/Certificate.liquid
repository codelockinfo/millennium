<div class="Certificate_main_1">
  {% if section.settings.heading_image != blank %}
    <div class="banner_image">
      <img src="{{ section.settings.heading_image | img_url: 'master' }}" alt="">
    </div>
  {% endif %}
  <div class="width-container">
    <div class="Certificate_heading">
      <h1 class="main_head">{{ section.settings.heading_1 }}</h1>
    </div>
    <div class="Certificate_image">
      {% if section.settings.Certificate_1 != blank %}
        <div class="Certificate_image_1">
          <img src="{{ section.settings.Certificate_1 | img_url: 'master' }}" alt="">
        </div>
      {% endif %}
      {% if section.settings.Certificate_2 != blank %}
        <div class="Certificate_image_2">
          <img src="{{ section.settings.Certificate_2 | img_url: 'master' }}" alt="">
        </div>
      {% endif %}
      {% if section.settings.Certificate_3 != blank %}
        <div class="Certificate_image_3">
          <img src="{{ section.settings.Certificate_3 | img_url: 'master' }}" alt="">
        </div>
      {% endif %}
      {% if section.settings.Certificate_4 != blank %}
        <div class="Certificate_image_4">
          <img src="{{ section.settings.Certificate_4 | img_url: 'master' }}" alt="">
        </div>
      {% endif %}
    </div>
  </div>
</div>


{%- schema -%}
  {
    "name": "Certificate",
    "settings": [
      {
        "type": "text",
        "id": "heading_1",
        "label": "heading"
      },
      {
        "type": "image_picker",
        "id": "heading_image",
        "label": "heading image"
      },
      {
        "type": "image_picker",
        "id": "Certificate_1",
        "label": "Certificate img 1"
      },
      {
        "type": "image_picker",
        "id": "Certificate_2",
        "label": "Certificate img 2"
      }, {
        "type": "image_picker",
        "id": "Certificate_3",
        "label": "Certificate img 3"
      }, {
        "type": "image_picker",
        "id": "Certificate_4",
        "label": "Certificate img 4"
      }
    ],
    "presets": [
      {
        "name": "Certificate"
      }
    ]
  }
{% endschema %}


