      },
      {
        "type": "image_picker",
        "id": "Certificate_1",
        "label": "Certificate_img_1"
      },
      {
        "type": "image_picker",
        "id": "Certificate_2",
        "label": "Certificate_img_2"
      },
      {
        "type": "image_picker",
        "id": "Certificate_3",
        "label": "Certificate_img_3"
      }, {
        "type": "image_picker",
        "id": "Certificate_4",
        "label": "Certificate_img_4"
      }
    ],
    "presets": [
      {
        "name": "Certificate"
      }
    ]
  }
{% endschema %}


