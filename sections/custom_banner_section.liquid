<div class="custombanner">
    <a href="{{section.settings.banner_link}}">
        {% comment %} <video src="{{section.settings.banner_video}}" type="video/mp4" autoplay loop muted
            class="banner_video"></video> {% endcomment %}
            <video class="banner_video" loop muted autoplay >
                <source src="{{section.settings.banner_video}}" type="video/mp4">
            </video>
            </a>
   
    <a href="{{section.settings.banner_link}}"><img src="{{section.settings.banner_img | img_url:'master' }}" alt=""
            class="custom_banner_img"></a>
</div>

{% schema %}
{
"name": "custom banner section",
"settings": [
{
"type": "url",
"id": "banner_video",
"label": "Banner video"
},
{
"type": "image_picker",
"id": "banner_img",
"label": "Banner img in mobile view"
},
{
"type": "url",
"id": "banner_link",
"label": "Banner link"
}
],
"presets": [
{
"name": "custom banner section",
"settings": {}
}
]
}
{% endschema %}

<style>
    .banner_video {
        max-width: 100%;
    }

    .custom_banner_img {
        display: none;
        max-width: 100%;
    }

    @media (max-width: 768px) {
        .banner_video {
            display: none;
        }

        .custom_banner_img {
            display: block;
        }
    }
</style>