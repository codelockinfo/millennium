<div class="main_div">
  <div class="bg_image">
    <div class="video_section">
      <video
        class="video"
        loop
        muted
        autoplay
        playsinline>
        <source src="{{ section.settings.video  }}" type="video/mp4">
      </video>

    </div>
    <div class="trusted_by">
      {% if section.settings.trusted_by_image != blank %}
        <div class="main_image_1">
          <img src="{{ section.settings.trusted_by_image | img_url: 'master' }}" alt="">
        </div>
      {% endif %}
      <h2 class="head">Trusted by</h2>
      {% if section.settings.trusted_by_image != blank %}
        <div class="main_image_1">
          <img src="{{ section.settings.trusted_by_image | img_url: 'master' }}" alt="">
        </div>
      {% endif %}
    </div>
    <div class="images">
      {% if section.settings.img_1 != blank %}
        <div class="img_box1">
          <img src="{{ section.settings.img_1 | img_url: 'master' }}" alt="">
        </div>
      {% endif %}
      {% if section.settings.img_2 != blank %}
        <div class="img_box2">
          <img src="{{ section.settings.img_2 | img_url: 'master' }}" alt="">
        </div>
      {% endif %}
      {% if section.settings.img_3 != blank %}
        <div class="img_box3">
          <img src="{{ section.settings.img_3 | img_url: 'master' }}" alt="">
        </div>
      {% endif %}
      {% if section.settings.img_4 != blank %}
        <div class="img_box4">
          <img src="{{ section.settings.img_4 | img_url: 'master' }}" alt="">
        </div>
      {% endif %}
      {% if section.settings.img_5 != blank %}
        <div class="img_box5">
          <img src="{{ section.settings.img_5 | img_url: 'master' }}" alt="">
        </div>
      {% endif %}
    </div>
  </div>
</div>


{%- schema -%}
  {
    "name": "Testimonial",
    "settings": [
      {
        "type": "url",
        "id": "video",
        "label": "video_watch"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "heading"
      },
      {
        "type": "image_picker",
        "id": "image_bg",
        "label": "image_bg"
      },
      {
        "type": "image_picker",
        "id": "trusted_by_image",
        "label": "trusted_by_image"
      }, {
        "type": "image_picker",
        "id": "img_1",
        "label": "img_1"
      }, {
        "type": "image_picker",
        "id": "img_2",
        "label": "img_2"
      }, {
        "type": "image_picker",
        "id": "img_3",
        "label": "img_3"
      }, {
        "type": "image_picker",
        "id": "img_4",
        "label": "img_4"
      }, {
        "type": "image_picker",
        "id": "img_5",
        "label": "img_5"
      }
    ],
    "presets": [
      {
        "name": "Testimonial"
      }
    ]
  }
{% endschema %}


