<div class="main_div">
  <div class="bg_image">
    {% if section.settings.video  != blank %}
    <div class="video_section">
      <video
        class="video"
        loop
        muted
        autoplay
        playsinline>
        <source src="{{ section.settings.video  }}" type="video/mp4">
      </video>

    </div>
    {% endif %}
    <div class="trusted_by">
      {% if section.settings.trusted_by_image != blank %}
        <div class="main_image_1">
          <img src="{{ section.settings.trusted_by_image | img_url: 'master' }}" alt="trust1" class="lazyautosizes lazyloaded" loading="lazy">
        </div>
      {% endif %}
      {% if section.settings.heading != blank %}<h2 class="head">{{ section.settings.heading }}</h2>{% endif %}
      {% if section.settings.trusted_by_image != blank %}
        <div class="main_image_1">
          <img src="{{ section.settings.trusted_by_image | img_url: 'master' }}" alt="trust11" class="lazyautosizes lazyloaded" loading="lazy">
        </div>
      {% endif %}
    </div>
    <div class="page-width">
      <div class="trustedby_images">
          {% for block in section.blocks  %}
              {% if block.settings.trusted_by_image != blank %}
                <div class="trustedby_image">
                  <img src="{{ block.settings.trusted_by_image | img_url: 'master' }}" alt="trust12" class="lazyautosizes lazyloaded" loading="lazy">
                </div>
              {% endif %}
          {% endfor %}
      </div>
    </div>
   
  </div>
</div>


{%- schema -%}
  {
    "name": "Testimonial",
    "settings": [
      {
        "type": "url",
        "id": "video",
        "label": "video_watch"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "heading"
      },
      {
        "type": "image_picker",
        "id": "image_bg",
        "label": "image_bg"
      },
      {
        "type": "image_picker",
        "id": "trusted_by_image",
        "label": "trusted_by_image"
      }
     
    ],
    "blocks": [
            {
            "type": "image",
            "name": "image",
            "settings": [
                {
                "type": "image_picker",
                "id": "trusted_by_image",
                "label": "trusted_by_image"
                }
            ]
        }
       ],
    "presets": [
      {
        "name": "Testimonial"
      }
    ]
  }
{% endschema %}


