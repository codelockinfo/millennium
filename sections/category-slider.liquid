<div class="slider-category">
  {% if section.settings.png_1 != blank %}
    <img
      src="{{section.settings.png_1 | img_url:'master'}}"
      class="png-img-1"
      alt=""
      loading="lazy"
    >
  {% endif %}
  {% if section.settings.png_2 != blank %}
    <img
      src="{{section.settings.png_2 | img_url:'master'}}"
      class="png-img-2"
      alt=""
      loading="lazy"
    >
  {% endif %}
  <div class="width-container 111111">
    <div class="common-heading ">
      <div class="section-header">
        <h2 class="heading-text">{{ section.settings.headingtext }}</h2>
      </div>
    </div>
  </div>
  <div class="slider-container">
    <div class="swiper categorySlider">
      <div class="swiper-wrapper">
        {%- for block in section.blocks -%}
          <a href="{{block.settings.collection_url}}">
            <div class="swiper-slide">
              <div class="slider-category-collection-box">
                <div class="slider-category-img-box">
                  {% if block.settings.category_img != blank %}
                    <div class="slider-box">
                      <img
                        src="{{block.settings.category_img | img_url:'master'}}"
                        class="collection-img"
                        alt=""
                        loading="lazy"
                      >
                      <a href="{{block.settings.collection_url}}" class="collection-url">
                        <div class="slider-category-heading-box slider-collection-heading">
                          {{ block.settings.category_text }}
                        </div>
                      </a>
                      <div class="design-box"></div>
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          </a>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "category slider Section",
  "settings": [
    {
      "type": "richtext",
      "id": "headingtext",
      "label": "Heading text"
    },
    {
      "type": "color",
      "id": "background",
      "label": " background color"
    },
    {
      "type": "image_picker",
      "id": "png_1",
      "label": "png img 1"
    },
    {
      "type": "image_picker",
      "id": "png_2",
      "label": "png img 2"
    }

  ],
  "blocks": [
    {
      "name": "block",
      "type": "text",
      "settings": [
        {
          "type": "image_picker",
          "id": "category_img",
          "label": "category collection img"
        },
        {
          "type": "richtext",
          "id": "category_text",
          "label": "category collection name"
        },
        {
          "type": "url",
          "id": "collection_url",
          "label": "select collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Category slider section"
    }
  ]
}
{% endschema %}

<style>
