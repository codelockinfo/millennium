<div class="slider-category">
  <img src="{{section.settings.png_1 | img_url:'master'}}" class="png-img-1" alt="">
  <img src="{{section.settings.png_2 | img_url:'master'}}" class="png-img-2" alt="">
  <div class="width-container">
    <div class="common-heading">
      <h1 class="slider-category-h1">{{section.settings.categoryheading}}</h1>
    </div>
  </div>
  <div class="slider-container">
    <div class="swiper categorySlider">
      <div class="swiper-wrapper">
        {%- for block in section.blocks -%}
          <div class="swiper-slide">
            <div class="slider-category-collection-box">
              <div class="slider-category-img-box">
                {% if block.settings.category_img != blank %}
                <div class="slider-box">
                    <img
                    src="{{block.settings.category_img | img_url:'master'}}"
                    class="collection-img"
                    alt="">
                    <a href="{{block.settings.collection_url}}" class="collection-url">
                    <div class="slider-category-heading-box slider-collection-heading">{{ block.settings.category_text }}</div>
                    </a>
                    <div class="design-box"></div>
                </div>
                {% endif %}
              </div>
                
            </div>
          </div>
        {% endfor %}
        </div>
        </div>
          <div class="swiper-button-next"><i class="fa-solid fa-arrow-right"></i></div>
          <div class="swiper-button-prev"><i class="fa-solid fa-arrow-left"></i></div>


  </div>
</div>

{% schema %}
  {
    "name": "category slider Section",
    "settings": [
      {
        "type": "richtext",
        "id": "categoryheading",
        "label": "Heading text" 
      },
      {
        "type": "color",
        "id": "background",
        "label": " background color" 
      },
      {
        "type": "image_picker",
        "id": "png_1",
        "label": "png img 1" 
      },
      {
        "type": "image_picker",
        "id": "png_2",
        "label": "png img 2" 
      }
    ],
    "blocks": [
      {
        "name": "block",
        "type": "text",
        "settings": [
          {
            "type": "image_picker",
            "id": "category_img",
            "label": "category collection img"
          }, {
            "type": "richtext",
            "id": "category_text",
            "label": "category collection name"
          }, {
            "type": "url",
            "id": "collection_url",
            "label": "select collection"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Category slider section"
      }
    ]
  }
{% endschema %}

