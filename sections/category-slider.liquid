<div class="slider-category">
  <div class="width-container">
    <div class="common-heading">
      <h1 class="slider-category-h1">{{section.settings.categoryheading}}</h1>
    </div>
  </div>
  <div class="slider-container">
    <div class="swiper categorySlider">
      <div class="swiper-wrapper">
        {%- for block in section.blocks -%}
          <div class="swiper-slide">
            <div class="slider-category-collection-box">
              <div class="slider-category-img-box">
                {% if block.settings.category_img != blank %}
                <div class="slider-box">
                    <img
                    src="{{block.settings.category_img | img_url:'master'}}"
                    class="collection-img"
                    alt="">
                    <a href="{{block.settings.collection_url}}">
                    <div class="slider-category-heading-box slider-collection-heading">{{ block.settings.category_text }}</div>
                    </a>
                </div>
                {% endif %}
              </div>
                
            </div>
          </div>
        {% endfor %}
        </div>
        <div class="swiper-button-next"><i class="fa-solid fa-arrow-right"></i></div>
        <div class="swiper-button-prev"><i class="fa-solid fa-arrow-left"></i></div>
    </div>


  </div>
</div>

{% schema %}
  {
    "name": "category slider Section",
    "settings": [
      {
        "type": "richtext",
        "id": "categoryheading",
        "label": "Heading text" 
      },
      {
        "type": "color",
        "id": "background",
        "label": " background color" 
      }
    ],
    "blocks": [
      {
        "name": "block",
        "type": "text",
        "settings": [
          {
            "type": "image_picker",
            "id": "category_img",
            "label": "category collection img"
          }, {
            "type": "richtext",
            "id": "category_text",
            "label": "category collection name"
          }, {
            "type": "url",
            "id": "collection_url",
            "label": "select collection"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Category slider section"
      }
    ]
  }
{% endschema %}

<style>
  .slider-category {
    padding: 60px 0;
    background-color: {{ section.settings.background }};
  }

  .slider-container{
    margin-left: 10%;
    margin-top: 80px;
    position: relative;
  }
  
  .common-heading {
    text-align: center;
  }
  .slider-category-h1 {
    font-size: 64px;
    font-weight: 400;
    line-height: 83.43px;
    font-family: 'Vindea' !important;
    color: #282828;
    text-transform: capitalize !important;
  }
  .slider-category-p {
    font-size: 24px;
    font-weight: 500;
    line-height: 36px;
    font-family: 'Montserrat Alternates';
    color: #777777;
    width: 60%;
    text-align: center;
    margin: 30px auto;
  }
  .slider-collection-img {
    max-width: 100%;
  }
  .slider-collection-heading {
    font-size: 24px;
    color: #ffffff;
    font-weight: 600;
    line-height: 36px;
    font-family: 'Montserrat Alternates' !important;
    text-decoration: underline;
    transition: all 0.5s;
  }

  .slider-category-heading-box {
    width: 100%;
    padding: 5px 0;
    margin-top: 5px;
    position: absolute;
    text-align: center;
    bottom: 0;
    
  }
  .slider-box{
    position: relative;
    height: 500px;
  }
  .swiper {
    width: 100%;
    height: 100%;
  }

  .swiper-slide {
    display: flex;
    justify-content: center;
    align-items: center;
    /* height: 700px; */
  }
  .slider-container .swiper-button-next{
		color:#282828 !important;
		border:3px solid #282828;
		justify-content: center;
		position: absolute;
    top: 90% !important;
		right: 55% !important;
		width: 35px;
		height: 35px;
		border-radius: 50%;
    margin-left: 50px;
    
	}
	.slider-container .swiper-button-prev{
		color:#282828;
		border:3px solid #282828;
		justify-content: center;
        position: absolute;
		top: 90% !important;
		left: 40% !important;
		width: 35px;
		height: 35px;
		border-radius: 50%;
    margin-right: 50px;
	}
  .swiper-slide:nth-child(even) {
  margin-top: 50px;
  /* background-color: #777777; */
 }

 .swiper-slide:nth-child(odd) {
  /* background-color: blue; */
  color: #fff;
}
  @media (max-width: 1024px) {
    .slider-collection-heading {
      font-size: 18px;
    }
    .slider-category-h1 {
      font-size: 50px;
    }
    .slider-category-p {
      font-size: 18px;
    }
  }
  @media (max-width: 900px) {
    .slider-collection-heading {
      font-size: 14px;
    }
    .slider-category-p {
      font-size: 18px;
      width: 80%;
    }
  }
  @media (max-width: 768px) {
    .slider-category-h1 {
      line-height: 50px;
      font-size: 50px;
    }
    .slider-category-p {
      width: 100%;
    }
    .slider-category-collection-box {
      padding: 0 15px;
    }
  }
  @media (max-width: 576px) {
    .slider-category-h1 {
      font-size: 40px;
      line-height: 60px;
    }
  }
  @media (max-width: 400px) {
    .slider-category-h1 {
      font-size: 30px;
    }
    .slider-category-p {
      font-size: 14px;
      line-height: 20px;
    }
  }

</style>


<script>
  var swiper = new Swiper(".categorySlider", {
    slidesPerView: 4.2,
    rewind: true,
    navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
    loop:true,
    spaceBetween: 30,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    breakpoints :{
      0:{
        slidesPerView: 1,
        spaceBetween: 30,
      },
      220:{
        slidesPerView: 1,
        spaceBetween: 30,
      },
      320:{
        slidesPerView: 1,
        spaceBetween: 30,
      },
  
      400:{
        slidesPerView: 2,
        spaceBetween: 30,
      },
      800:{
        slidesPerView: 3,
        spaceBetween: 30,
      },
      900:{
        slidesPerView: 4,
        spaceBetween: 30,
      },
      1000:{
        slidesPerView: 4.2,
        spaceBetween: 30,
      },
    }
  });
</script>