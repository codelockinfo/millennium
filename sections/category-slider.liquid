ontainer{margin-top:30px}.png-img-1,.png-img-2{display:none}.categorySlider .swiper-slide:nth-of-type(2n){margin-top:0}.swiper-arrow-button{margin-top:12%!important}.slider-category{padding-bottom:50px}.collection-img{height:330px}}
