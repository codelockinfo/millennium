<div class="Collection-grid-section" id="{{ section.id }}">
  <div class="Main-collections">
    {%- if section.settings.title != blank -%}
      <div class="page-width">
        <div class="section-header">
          <h2>{{ section.settings.title | escape }}</h2>
        </div>
      </div>
    {%- endif -%}
    <div class="Main-Coll Collection-cls">
      {% for product in section.settings.collectionproduct.products %}
        <div class="First-collection">
          <div class="image-collection">
            {% if product.featured_image != blank %}
              <div class="product-img">
                <a href="{{ product.url }}">
                  <img src="{{  product.featured_image  | img_url: 'large' }}" class="main-img">
                  <img src="{{  product.images[1]  | img_url: 'large' }}" class="hover-image ">
                </a>
              </div>
            {% endif %}
            <div class="product-content-box">
              <div class="product-title">
                {{ product.title }}
              </div>
              <div class="product-price">{{ product.price | money }}</div>

              <form method="post" action="/cart/add" class="add-to-cart">
                <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                <input min="1" type="number" id="quantity" name="quantity" value="1" class="hide">
                <input type="submit" value="Add to cart" class="btn">
              </form>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "collection slider section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "id": "collectionproduct",
      "type": "collection",
      "label": "Select collection"
    }
  ],
  "presets": [
    {
      "name": "collection slider section"
    }
  ]
}
{% endschema %}

