{% if template == "product" %}
  <style>
    #shopify-section-Commitment .mission_main {
      background: #F9F9F9;
      position: unset;
    }
  </style>
{% endif %}
<div class="mission">
  <div class="mission_main">
    <div class="mission_section">

      <div class="content_01">
        <div class="head_main">
          <h1 class="commit-h1">{{ section.settings.Commitment_head }}</h1>
        </div>
      </div>

      <div class="item">

        <div class="image_content_1">
          {% if section.settings.Commitment_img_1 != blank %}
            <div class="img_1">
              <img src="{{ section.settings.Commitment_img_1 | img_url: 'master' }}" alt="">
            </div>
          {% endif %}
          <div class="para_1">
            <p>{{ section.settings.Commitment_para_1 }}</p>
          </div>
        </div>

        <div class="image_content_1">
          {% if section.settings.Commitment_img_2 != blank %}
            <div class="img_1">
              <img src="{{ section.settings.Commitment_img_2 | img_url: 'master' }}" alt="">
            </div>
          {% endif %}
          <div class="para_1">
            <p>{{ section.settings.Commitment_para_2 }}</p>
          </div>
        </div>

        <div class="image_content_1">
          {% if section.settings.Commitment_img_3 != blank %}
            <div class="img_1">
              <img src="{{ section.settings.Commitment_img_3 | img_url: 'master' }}" alt="">
            </div>
          {% endif %}
          <div class="para_1">
            <p>{{ section.settings.Commitment_para_3 }}</p>
          </div>
        </div>

        <div class="image_content_1">
          {% if section.settings.Commitment_img_4 != blank %}
            <div class="img_1">
              <img src="{{ section.settings.Commitment_img_4 | img_url: 'master' }}" alt="">
            </div>
          {% endif %}
          <div class="para_1">
            <p>{{ section.settings.Commitment_para_4 }}</p>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>


{%- schema -%}
  {
    "name": "mission",
    "settings": [
      {
        "type": "text",
        "id": "Commitment_head",
        "label": "Commitment_head"
      },
      {
        "type": "image_picker",
        "id": "Commitment_img_1",
        "label": "Commitment_img_1"
      },
      {
        "type": "text",
        "id": "Commitment_para_1",
        "label": "Commitment_para_1"
      },
      {
        "type": "image_picker",
        "id": "Commitment_img_2",
        "label": "Commitment_img_2"
      }, {
        "type": "text",
        "id": "Commitment_para_2",
        "label": "Commitment_para_2"
      }, {
        "type": "image_picker",
        "id": "Commitment_img_3",
        "label": "Commitment_img_3"
      }, {
        "type": "text",
        "id": "Commitment_para_3",
        "label": "Commitment_para_3"
      }, {
        "type": "image_picker",
        "id": "Commitment_img_4",
        "label": "Commitment_img_4"
      }, {
        "type": "text",
        "id": "Commitment_para_4",
        "label": "Commitment_para_4"
      }
    ],
    "presets": [
      {
        "name": "mission"
      }
    ]
  }
{% endschema %}


<style>
  * {
    margin: 0;
    padding: 0;
  }
  .commit-h1 {
    font-size: 48px;
    font-weight: 400;
    text-align: left;
    line-height: 62.57px;
    font-family: "Italiana";
    text-transform: none !important;
  }
  .mission {
    width: 100%;
    height: auto;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    z-index: 25;
  }

  .mission_main {
    width: 90%;
    height: auto;
    border-radius: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgb(229, 241, 249);
    position: absolute;
    bottom: -105px;
  }
  .mission_section {
    width: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 30px 0;
  }
  .item {
    width: 70%;
    display: flex;
    align-items: flex-start;
    justify-content: space-around;
  }

  .content_01 {
    margin-left: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .head_main {
    font-size: 43px;
    font-weight: 400;
    line-height: 62.57px;
    text-align: left;
  }

  .image_content_1 {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  .img_1 {
    width: 70px;
    height: 70px;
    background-color: #569BD7;
    border-radius: 50%;
    display: flex;

  }
  .img_1 img {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: auto;
    filter: invert(1);
  }
  .para_1 {
    font-family: "Montserrat Alternates";
    font-weight: 600;
    font-size: 18px;
  }

  @media only screen and (max-width: 1024px) {
    .item {
      display: flex;
      flex-wrap: wrap;
    }

    .content_01 {
      margin-left: 0;
    }

    .head_main .commit-h1 {
      margin-bottom: 15px;
      font-size: 38px !important;
      font-weight: 400;
      line-height: 32.57px;
      text-align: center;
    }
  }

  @media only screen and (max-width: 902px) {
    .mission_main {
      bottom: -170px;
    }
  }
  @media only screen and (max-width: 768px) {
    .mission_section {
      display: flex;
      flex-direction: column;
    }
    .item {
      margin-top: 5px;
    }
    .mission_main {
      bottom: -205px;
    }

    .para_1 {
      font-family: "Montserrat Alternates";
      font-weight: 600;
      font-size: 15px;
    }


  }

  @media only screen and (max-width: 540px) {
    .mission_main {
      bottom: -350px;
    }
    .commit-h1 {
      font-size: 38px;
    }
  }

  @media only screen and (max-width: 385px) {
    .commit-h1 {
      padding: 0 5px;
    }
  }

  @media only screen and (max-width: 359px) {
    .mission_main {
      bottom: -400px;
    }
  }

</style>