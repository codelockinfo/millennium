<style>
    .template-product .diamondshape-name label{
        font-family: 'Montserrat Alternates';
        font-size: 14px;
        font-weight: 600;
        line-height: 36px;
        text-align: center;
        letter-spacing: .5px;
        text-transform: capitalize;
    }
    .main-box-properties{ 
        gap:15px;
        flex-wrap:wrap;
        display: flex;
    }
    .diamond-img-box{
        background-color: #f0eeef;
        cursor:pointer;
    }
    .diamondshape-name {
        /* float: left; */
        margin: 0;
        /* width: 100px; */
        height: 40px;
        position: relative;
        color:#777777;
        font-size: 14px;
        text-align: center;
    }

.diamondshape-name label,
.diamondshape-name input {
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.diamondshape-name input[type="radio"] {
  opacity: 0.011;
  z-index: 100;
}

.radio-toolbar.selected {
    box-shadow: 0 0 0 2px #B69D62;
}
.diamondshape-name label {
  cursor: pointer;
  z-index: 9;
  display:flex;
  align-items:center;
  justify-content: center;
}
</style>
<script>
$(document).on("click",".diamond-img-box",function(){
    console.log("CLick");
    $(".radio-toolbar").removeClass("selected");
    $(this).closest(".radio-toolbar").addClass("selected");
    $(this).closest(".radio-toolbar").find(".diamondshape-name input").prop("checked", true);
});
</script>