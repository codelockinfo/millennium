  {% comment %} custom properties Diamond shape {% endcomment %}
        {% if product.metafields.custom.diamond_shape != blank %}
        {% assign diamond_shapes = product.metafields.custom.diamond_shape | remove: '["' | remove: '"]' %}
        {%  if diamond_shapes != blank %}
            <div class="customproperties product-block">
            <h4 class="swatch__title">
                Diamond Shape
            </h4>
            <div class="flex main-box-properties">
                {% assign diamond_shape = diamond_shapes | split:  '","' %}
                {% for diamond_shape_value in diamond_shape %}
                {% if diamond_shape_value == "Round" %}
                    <div class="diamond-box radio-toolbar selected">
                    <div class="diamond-img-box">
                        <img src="https://cdn.shopify.com/s/files/1/0571/2825/5601/files/Rectangle_62_1.png?v=1717484890" class="diamond-img">
                    </div>
                    <h2  class="diamondshape-name">
                        <input type="radio" name="properties[Diamond Shape]" value="{{ diamond_shape_value }}" checked> <label>{{ diamond_shape_value }}</label>
                    </h2>
                    </div>
                {% endif %}
                {% if diamond_shape_value == "Oval" %}
                    <div class="diamond-box radio-toolbar">
                    <div class="diamond-img-box">
                        <img src="https://cdn.shopify.com/s/files/1/0571/2825/5601/files/Rectangle_62_1.png?v=1717484890" class="diamond-img">
                    </div>
                    <h2  class="diamondshape-name">
                        <input type="radio" name="properties[Diamond Shape]" value="{{ diamond_shape_value }}"> <label >{{ diamond_shape_value }}</label>
                    </h2>
                    </div>
                {% endif %}
                {% if diamond_shape_value == "Radiant" %}
                    <div class="diamond-box radio-toolbar">
                    <div class="diamond-img-box">
                        <img src="https://cdn.shopify.com/s/files/1/0571/2825/5601/files/Rectangle_68.png?v=1717484960" class="diamond-img">
                    </div>
                    <h2  class="diamondshape-name">
                        <input type="radio" name="properties[Diamond Shape]" value="{{ diamond_shape_value }}"> <label >{{ diamond_shape_value }}</label>
                    </h2>
                    </div>
                {% endif %}
                {% if diamond_shape_value == "Asscher" %}
                    <div class="diamond-box radio-toolbar">
                    <div class="diamond-img-box">
                        <img src="https://cdn.shopify.com/s/files/1/0571/2825/5601/files/Rectangle_70.png?v=1717484960" class="diamond-img">
                    </div>
                    <h2  class="diamondshape-name">
                        <input type="radio" name="properties[Diamond Shape]" value="{{ diamond_shape_value }}"> <label >{{ diamond_shape_value }}</label>
                    </h2>
                    </div>
                {% endif %}
                {% endfor %}
            </div>
            </div>
        {% endif  %}
        {% endif  %} 
